# Dockerfile
FROM ros:foxy

# Install necessary dependencies
RUN apt-get update && apt-get install -y \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages
RUN pip3 install rclpy geometry_msgs fastapi paho-mqtt requests

# Copy the application code into the container
COPY . /app
WORKDIR /app

# Set the entrypoint to run the ROS2 node
ENTRYPOINT ["ros2", "run", "robot_simulation", "robot_simulation_node"]
